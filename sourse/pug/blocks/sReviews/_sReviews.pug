mixin sReviews()
	// start sReviews
	+b.sReviews.section#sReviews&attributes(attributes)
		+e.bgcWrap
			img(src="img/@2x/sReviews.jpg", alt="")
		.container
			.row
				
				.col-md-6
					.h2 Пациенты нам как семья.<br>Послушайте их&nbsp;истории.
					blockquote
						p Тут будет яркий отрывок из всего отзыва. Самая суть сказанного. Лучшая цитата, т.к. далеко не все будут нажимать на plаy, но главное из отзыва они должны понять.
					+e.row.row
						+e.col.col-6.col-md-12.col-lg-6
							+e.item
								+icon('advantages-1')
								.h6 #[b 8] лет <br>работает 3D Clinic
						+e.col.col-6.col-md-12.col-lg-6
							+e.item
								+icon('advantages-2')
								.h6 #[b 6 000] зубов<br> спасли от удаления
						+e.col.col-6.col-md-12.col-lg-6
							+e.item
								+icon('advantages-3')
								.h6 #[b 15 000] зубов реставрировано
						+e.col.col-6.col-md-12.col-lg-6
							+e.item
								+icon('advantages-4')
								.h6 #[b 20 000] <br>анестезий
								
				.col-md-6.order-md-first
					+e.imgWrap(href="https://youtu.be/5xWnpM7f2gc" data-fancybox="video")
						+e.iconWrap
							+icon('play')




	// end sReviews